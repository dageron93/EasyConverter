<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".AMenuActivity">

    <Button
        android:id="@+id/buttonLengthPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:autoSizeMaxTextSize="35dp"
        android:autoSizeMinTextSize="25dp"
        android:onClick="toLengthPage"
        android:text="@string/main_menu_button_length" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonLengthPage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:autoSizeMaxTextSize="35dp"
        android:autoSizeMinTextSize="25dp"
        android:onClick="toMassPage"
        android:text="@string/main_menu_button_mass" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:autoSizeMaxTextSize="35dp"
        android:autoSizeMinTextSize="25dp"
        android:onClick="toTemperaturePage"
        android:text="@string/main_menu_button_temperature" />
</RelativeLayout>